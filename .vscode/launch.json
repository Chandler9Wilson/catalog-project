{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask (0.11.x or later)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "console": "integratedTerminal",
      "module": "flask",
      "pythonPath": "${config:python.pythonPath}",
      "cwd": "${workspaceFolder}",
      "env": {
        "FLASK_APP": "${workspaceFolder}/run.py"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload"
      ],
      "envFile": "${workspaceFolder}/.env",
      "debugOptions": [
        "RedirectOutput"
      ]
    }
  ]
}